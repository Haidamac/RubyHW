<% if current_user %>
  <br>
  <h2><svg xmlns='http://www.w3.org/2000/svg' width='48' height='48' fill='currentColor' class='bi bi-bag-heart-fill' viewBox='0 0 16 16'>
    <path d='M11.5 4v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5ZM8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1Zm0 6.993c1.664-1.711 5.825 1.283 0 5.132-5.825-3.85-1.664-6.843 0-5.132Z'/>
  </svg>
    History of your orders:</h2>

  <% @orders.each do |order| %>
    <% if !order.total_price.zero? %>
      Order # <%= order.id %>
      <% if order.paid? %>
        <span>Date of purchase <%= order.updated_at.to_date %></span><span class="ms-3">Status:
          <%= link_to 'paid', order_paid_path(order), class: 'btn btn-outline-success btn-sm' %></span>
      <% elsif Time.now < order.created_at + 1.day %>
        <span>Order date <%= order.created_at.to_date %></span><span class="ms-3">Status:
          <%= link_to 'unpaid', order_path(order), class: 'btn btn-outline-danger btn-sm' %></span>
      <% else %>
        <span>Order date <%= order.created_at.to_date %></span><span class="ms-3">Status:
          <%= link_to 'canceled', order_path(order), class: 'btn btn-outline-secondary btn-sm' %></span>
      <% end %>
      <br>
      <%= render partial: 'order_history', locals: { order: order } %>
    <% end %>
  <% end %>
<% else %>
  <h3>Please SignIn or SignUp!</h3>
<% end %>
