<h5><i>Details of your order:</i></h5>
<h1>Order #<%= @order.id %></h1>

<table class='table'>
  <tr>
    <th>#</th>
    <th>Image</th>
    <th>Name</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
  <% @sum_order = 0 %>
  <% @order.cart.line_item.each_with_index do |line_item, index| %>
  <tr>
    <td><%= index+1 %></td>
    <td><%= image_tag image_url(line_item.product.image), height: 100, width: 100 %> </td>
    <td><%= line_item.product.name %></td>
    <td><%= line_item.quantity %></td>
    <td><%= number_to_currency line_item.price * line_item.quantity %></td>
  </tr>
    <% @sum_order += line_item.price * line_item.quantity %>
<% end %>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td><b>Total price:</b></td>
    <td><b>
      <%= number_to_currency @sum_order %></b></td>
  </tr>
</table>

