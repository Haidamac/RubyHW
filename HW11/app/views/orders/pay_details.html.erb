<div class="payment-title">
  <h1>Payment Information</h1>
<!--  Order #<%#= @order.id %>-->
</div>
<div class="card mb-3" style="max-width: 400px;">
<div class="form-container">
  <div class="field-container">
    <label for="name">Cardholder</label>
    <input id="name" maxlength="20" type="text" required>
  </div>
  <div class="field-container">
    <label for="cardnumber">Card Number</label>
    <input id="cardnumber" type="text" placeholder="0000-0000-0000-0000" pattern="[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{4}" inputmode="numeric" size='16' required>
  </div>
  <div class="field-container">
    <label for="expirationdate">Expiration (mm/yy)</label>
    <input id="expirationdate" type="text" placeholder="01/23" pattern="[0-9]{2}/[0-9]{2}" inputmode="numeric" size='5' required>
  </div>
  <div class="field-container">
    <label for="securitycode">Security Code</label>
    <input id="securitycode" type="text" placeholder="000" pattern="[0-9]{3}" inputmode="numeric" size='3' required>
  </div>
</div>
<%= button_to 'Confirm', order_pay_path, method: :put, class: 'btn btn-outline-dark' %>
</div>
