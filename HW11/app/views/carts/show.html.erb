<h1>Your Cart</h1>

<% if current_cart.line_item.any? %>
  <table class="table">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    <% current_cart.line_item.each do |line_item| %>
      <tr>
        <td><%= image_tag image_url(line_item.product.image), width: 100, height: 100 %></td>
        <td><%= line_item.product.name %></td>
        <td><%= line_item.quantity %></td>
        <td><%= number_to_currency line_item.product.price %></td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td><b>Total price:</b></td>
      <td><b><%= number_to_currency current_cart.total_price %></b></td>
    </tr>
  </table>

  <%= button_to 'Checkout', orders_path, class: 'btn btn-primary' %>
<% else %>
  <p>Your cart is empty</p>
<% end %>