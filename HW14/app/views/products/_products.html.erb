<% @products.each do |product| %>
  <%= link_to product, class: 'card p-0 mt-3 mx-auto shadow-sm' do %>
    <% if product.image.attached?  %>
      <%= image_tag product.image.variant(:main), class: 'card-img-top', alt: product.name %>
    <% else %>
      <%= image_tag("no_image.png", class: 'card-img-top', alt: 'No Image') %>
    <% end %>
    <div class='card-body px'>
      <h5 class='card-title text-center'><%= product.name %></h5>
      <p class='card-price mt-auto text-end'><%= number_to_currency(product.price) %></p>
      <%= add_cart(product) %>
    </div>
  <% end %>
<% end %>
