<div class='row mt-3'>
  <nav aria-label='breadcrumb'>
    <ol class='breadcrumb'>
      <li class='breadcrumb-item'><%= link_to 'Home', root_path %></li>
      <li class='breadcrumb-item'><%= link_to @product.category.title, @product.category %></li>
      <li class='breadcrumb-item active' aria-current='page'><%= @product.name %></li>
    </ol>
  </nav>
</div>
<div class='card mb-3' style='max-width: 1200px;'>
  <div class='row g-0'>
    <div class='col-md-4'>
      <% if @product.image.attached?  %>
        <%= image_tag @product.image, class: 'img-fluid rounded-start', alt: @product.name %>
      <% else %>
        <%= image_tag("no_image.png", class: 'card-img-top', alt: 'No Image') %>
      <% end %>
    </div>
    <div class='col-md-8'>
      <div class='card-body'>
        <h3 class='text-center'><%= @product.name %></h3>
        <p class='card-text'><%= @product.description %></p>
        <p class='text-end'><i>Category: <%= @product.category.title %></i></p>
        <p class='card-text'><h4 style='color:#d63384; text-align:right'>Price: <%= number_to_currency(@product.price) %></h4></p>
        <%= add_cart(@product) %>
      </div>
    </div>
  </div>
</div>
