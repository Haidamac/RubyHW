<table class='table'>
  <tr>
    <th>#</th>
    <th>Image</th>
    <th>Name</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
  <% order.line_items.includes([:product]).each.with_index do |line_item, index| %>
  <tr>
    <td><%= index+1 %></td>
    <td><%= image_tag line_item.product.image.variant(:thumb) %> </td>
    <td><%= line_item.product.name %></td>
    <td><%= line_item.quantity %></td>
    <td><%= number_to_currency(line_item.line_item_total_price) %></td>
  </tr>
  <% end %>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td><b>Total price:</b></td>
    <td><b>
      <%= number_to_currency(order.total_price) %></b></td>
  </tr>
</table>
